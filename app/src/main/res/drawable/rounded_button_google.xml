<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#de5246" />
            <gradient android:angle="-90" android:startColor="#a5392e"      android:endColor="#de5246"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#de5246" />
            <solid android:color="#de5246"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#de5246" />
            <gradient android:angle="-90" android:startColor="#de5246" android:endColor="#de5246" />
        </shape>
    </item>

</selector>