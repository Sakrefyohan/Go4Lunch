<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#50abf1" />
            <gradient android:angle="-90" android:startColor="#256EA6"      android:endColor="#50abf1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#50abf1" />
            <solid android:color="#50abf1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#50abf1" />
            <gradient android:angle="-90" android:startColor="#50abf1" android:endColor="#50abf1" />
        </shape>
    </item>

</selector>